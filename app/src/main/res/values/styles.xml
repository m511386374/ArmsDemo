<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //横线
    <style name="LineHorizontal_1px">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_line_D</item>
    </style>

    <style name="TextView_Single">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView_14sp_333" parent="TextView_Single">
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView_14sp_999" parent="TextView_Single">
        <item name="android:textColor">#ff999999</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
